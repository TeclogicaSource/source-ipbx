<html {$html_attrs}>
<head>
<title>Configuração</title>
<link REL="stylesheet" href="include/style.css" type="text/css">
<!--[if IE]>
<link REL="stylesheet" href="include/styleIE.css" type="text/css">
<![endif]-->
<style>
.grid_block {  
margin-top:5px;
border-collapse: collapse;
align:center;
width:95%;
border:none;
} 
.grid_block td { 
 padding: 5px; 
 margin: 0px; 
 border: solid black 1px;
}
.grid_block .gridspacing {width:20px;border-top-color:white; border-bottom-color:white;background-color:white}
@media print 
{
	a.pdf {display:none}
}
.printpage {page-break-after:always}
#selpage{margin-left:30px;}
</style> 
</head>
<body style="background-color:white">
{BEGIN body}
{$header}
{BEGIN page}

<h1>Configuração</h1>
{BEGIN page_number}
<div id='selpage'>Página {$pageno} de {$maxpages} </div>
{END page_number}

{BEGIN grid_block}

<table align="center" cellpadding=5 class="grid_block">
{BEGIN grid_header}
<tr>
{BEGIN record_header}
{BEGIN id_conf_fax_fieldheadercolumn}
	<td>
{BEGIN id_conf_fax_fieldheader}
	<b>Identificação</b>
{END id_conf_fax_fieldheader}
	</td>
{END id_conf_fax_fieldheadercolumn}
{BEGIN tp_reter_fax_fieldheadercolumn}
	<td>
{BEGIN tp_reter_fax_fieldheader}
	<b>Manter FAX por (mês)</b>
{END tp_reter_fax_fieldheader}
	</td>
{END tp_reter_fax_fieldheadercolumn}
{BEGIN pasta_fieldheadercolumn}
	<td>
{BEGIN pasta_fieldheader}
	<b>Local para gravação (Exemplo: /tmp/)</b>
{END pasta_fieldheader}
	</td>
{END pasta_fieldheadercolumn}
{BEGIN endrecordheader_block}
	<td class="gridspacing">&nbsp;</td>
{END endrecordheader_block}
{END record_header}
</tr>
{END grid_header}
{BEGIN grid_row}
<tr valign=top {$rowstyle} {$rowattrs}>
{BEGIN grid_record}
{BEGIN id_conf_fax_fieldcolumn}
<td {$id_conf_fax_style}>
{$id_conf_fax_value}
</td>
{END id_conf_fax_fieldcolumn}
{BEGIN tp_reter_fax_fieldcolumn}
<td {$tp_reter_fax_style}>
{$tp_reter_fax_value}
</td>
{END tp_reter_fax_fieldcolumn}
{BEGIN pasta_fieldcolumn}
<td {$pasta_style}>
{$pasta_value}
</td>
{END pasta_fieldcolumn}
{BEGIN endrecord_block}
<td class="gridspacing">&nbsp;</td>
{END endrecord_block}
{END grid_record}
</tr>
{END grid_row}
<!-- totals row -->
</table>
{END grid_block}
{END page}
{$footer}
{END body}
</body>
</html>