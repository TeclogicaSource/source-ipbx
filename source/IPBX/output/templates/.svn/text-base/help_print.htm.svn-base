<html {$html_attrs}>
<head>
<title>Ajuda</title>
<link REL="stylesheet" href="include/style.css" type="text/css">
<!--[if IE]>
<link REL="stylesheet" href="include/styleIE.css" type="text/css">
<![endif]-->
<style>
.grid_block {  
margin-top:5px;
border-collapse: collapse;
align:center;
width:95%;
border:none;
} 
.grid_block table {border-collapse: collapse;}
.grid_block table td { 
 padding: 5px; 
 margin: 0px; 
 border: solid black 1px;
}
.grid_block .gridspacing {width:20px;border-top-color:white; border-bottom-color:white;background-color:white}
@media print 
{
	a.pdf {display:none}
}
.printpage {page-break-after:always}
#selpage{margin-left:30px;}
</style> 
</head>
<body style="background-color:white">
{BEGIN body}
{$header}
{BEGIN page}

	
<h1>Ajuda</h1>
{BEGIN page_number}
<div id='selpage'>Página {$pageno} de {$maxpages} </div>
{END page_number}


{BEGIN grid_block}
<table align="center" cellpadding=5 class="grid_block">
{BEGIN grid_row}
<tr valign=top {$rowstyle} {$rowattrs}>
{BEGIN grid_record}
<td>
<table width=100%>
<tr><td width=20% class=shade>Função</td>
<td {$funcao_style}>
{$funcao_value}
</td>
</tr>
<tr><td width=20% class=shade>Atalho</td>
<td {$atalho_style}>
{$atalho_value}
</td>
</tr>
<tr><td width=20% class=shade>Descrição</td>
<td {$dsc_help_style}>
{$dsc_help_value}
</td>
</tr>
</table>
</td>
{BEGIN endrecord_block}
<td class="gridspacing">&nbsp;</td>
{END endrecord_block}
{END grid_record}
</tr>
{BEGIN grid_rowspace}
<tr>
{BEGIN grid_recordspace}
<td style="border-width:0">&nbsp;</td>
{END grid_recordspace}
</tr>
{END grid_rowspace}
{END grid_row}
</table>
{END grid_block}
{END page}
{$footer}
{END body}
</body>
</html>